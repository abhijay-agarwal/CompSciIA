            <Font name="DIN Alternate Bold" size="40.0" />
         </font>
      </Text>
      <Text layoutX="80.0" layoutY="110.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Buy or sell stocks">
         <font>
            <Font name="DIN Alternate Bold" size="20.0" />
         </font>
      </Text>
      <ComboBox fx:id="stock" layoutX="80.0" layoutY="134.0" prefHeight="50.0" prefWidth="440.0" promptText="Choose a stock" style="-fx-background-color: #EBEBEB; -fx-background-radius: 4;" stylesheets="@../Extra/ComboBox.css" />
