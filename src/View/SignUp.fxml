<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.SignUpController">
   <children>
      <BorderPane layoutX="30.0" layoutY="20.0" prefHeight="360.0" prefWidth="540.0" style="-fx-border-color: #5bc793; -fx-border-width: 3;" />
      <Text layoutX="80.0" layoutY="80.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Create an account">
         <font>
            <Font name="DIN Alternate Bold" size="40.0" />
         </font>
      </Text>
      <TextField fx:id="firstName" layoutX="80.0" layoutY="130.0" prefHeight="50.0" prefWidth="210.0" promptText="First name" style="-fx-border-color: #5BC793; -fx-border-width: 2; -fx-border-radius: 10;">
         <font>
            <Font name="DIN Alternate Bold" size="20.0" />
         </font>
      </TextField>
      <TextField fx:id="lastName" layoutX="310.0" layoutY="130.0" prefHeight="50.0" prefWidth="210.0" promptText="Last name" style="-fx-border-color: #5BC793; -fx-border-width: 2; -fx-border-radius: 10;">
         <font>
            <Font name="DIN Alternate Bold" size="20.0" />
         </font>
      </TextField>
      <TextField fx:id="email" layoutX="80.0" layoutY="190.0" prefHeight="50.0" prefWidth="440.0" promptText="Email address" style="-fx-border-color: #5BC793; -fx-border-width: 2; -fx-border-radius: 10;">
         <font>
            <Font name="DIN Alternate Bold" size="20.0" />
         </font>
      </TextField>
      <PasswordField fx:id="password" layoutX="80.0" layoutY="250.0" prefHeight="50.0" prefWidth="440.0" promptText="Password" style="-fx-border-color: #5BC793; -fx-border-width: 2; -fx-border-radius: 10;">
         <font>
            <Font name="DIN Alternate Bold" size="20.0" />
         </font>
      </PasswordField>
      <Button fx:id="signupButton" layoutX="225.0" layoutY="315.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #5BC793;" text="Sign Up" textFill="WHITE">
         <font>
            <Font name="DIN Alternate Bold" size="22.0" />
         </font>
      </Button>
      <Text layoutX="80.0" layoutY="110.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Start trading now">
         <font>
            <Font name="DIN Alternate Bold" size="20.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
